<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="xyz.nvrsettle.bobsmartaadhar.Activities.WalletActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="6dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark" >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Merchant Wallet"
            android:textSize="25sp"
            android:gravity="left"
            android:textColor="#fff"
            android:id="@+id/tx"
            />

    </android.support.v7.widget.Toolbar>



    <ImageView
        android:id="@+id/image"
        android:layout_margin="20dp"
        android:layout_below="@+id/toolbar"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:padding="20dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/adduser"/>

    <TextView
        android:layout_below="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="0.0"
        android:id="@+id/rupess"
        android:fontFamily="sans-serif-thin"
        android:textSize="80sp"
        />

    <TextView
        android:padding="20dp"
        android:id="@+id/name"
        android:gravity="center"
        android:textSize="22sp"
        android:layout_below="@+id/rupess"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name"/>

    <TextView
        android:padding="20dp"
        android:id="@+id/uid"
        android:gravity="center"
        android:textSize="22sp"
        android:layout_below="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="UID"/>

    <TextView
        android:id="@+id/button"
        android:layout_below="@+id/uid"
        android:layout_margin="20dp"
        android:padding="20dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#fff"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="Transfer Money to Bank Account using UPI"/>


</RelativeLayout>
